@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="create" asp-controller="product" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@product.Name</td>
                    <td>@product.Desc</td>
                    <td><img src="~/assets/img/@product.Img" style="max-width:100px" /></td>
                    <td>
                        <a asp-action="edit" asp-controller="product" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>

                    </td>
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@product.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

